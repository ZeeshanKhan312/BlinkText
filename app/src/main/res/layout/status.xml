<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#F5201F1F"
    android:id="@+id/chatContent" >
    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#F5201F1F">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DC5E5959"
            android:layout_above="@id/circular_status_view" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="6dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="5dp"/>

    <com.devlomi.circularstatusview.CircularStatusView
        android:id="@+id/circular_status_view"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="5dp"
        app:portion_color="@color/teal_200"
        app:portion_spacing="4dp"
        app:portion_width="4dp"
        app:portions_count="8" />

        <TextView
            android:id="@+id/userID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/circular_status_view"
            android:layout_centerVertical="true"
            android:textColor="#DFD4D4"
            android:textSize="18sp" />

      </RelativeLayout>
</RelativeLayout>